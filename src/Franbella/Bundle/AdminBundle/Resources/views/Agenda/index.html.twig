{% extends "FranbellaAdminBundle:Page:index.html.twig" %}
{% block interno %}
{% block tituloAdministracao %}
    <h3 class="titulo-pagina-admin">Agenda</h3>
{% endblock %}
    <div class="panel panel-default painel-conteudo-admin">
        <div class="panel-heading conteudo-admin">
            <div class="caixa-form">
                {% block conteudoAdministracao %}
                    <form name="cadastra-distribuidor" id="cadastra-distribuidor" 
                          action="{{ path('franbella_admin_agenda_cadastra', {'id_evento': evento.id}) }}" method="POST" {{ form_enctype(form) }}>
                        {{ form_widget(form) }}
                        <input type="submit" value="Cadastrar" />
                    </form>
                {% endblock %}
                
                {% if evento.id > 0 %}
                <br />
                <p><a href="{{ path('franbella_admin_agenda_home') }}">Criar Novo Registro</a></p>
                <p>Capa atual:</p>
                <img class="imagem-logo" src="{{ ('uploads/evento/' ~ evento.capa) | imagine_filter('my_thumb') }}" />
                {% endif %}
                
                {% for flashMessage in app.session.flashbag.get('resposta-evento') %}
                    <div class="resposta-contato">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                
            </div>
            <div class="caixa-registros">
                <h4><strong>Eventos Cadastrados</strong></h4>
                {% for evento in eventos %}
                <p>{{ evento.nome }} - {{ evento.cidade }} - 
                            {{ evento.dataInicial|date('d/m/Y') }} a {{ evento.dataFinal|date('d/m/Y') }} 
                    <span style="padding-left: 10px">
                        <a href="{{ path('franbella_admin_agenda_home', {'id_evento': evento.id}) }}">Editar</a> | 
                        <a href="{{ path('franbella_admin_agenda_exclui', {'id_evento': evento.id}) }}">Excluir</a> |
                        <a href="{{ path('franbella_admin_agenda_fotos', {'id_evento': evento.id}) }}">Gerenciar Fotos</a>
                    </span>
                </p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(document).ready(function(){
        $('.resposta-contato').fadeOut(5000);
        
    });
</script>
{% endblock %}