{% extends "FranbellaAdminBundle:Page:index.html.twig" %}
{% block interno %}
{% block tituloAdministracao %}
    <h3 class="titulo-pagina-admin">Propostas Distribuidores</h3>
{% endblock %}
    <div class="panel panel-default painel-conteudo-admin">
        <div class="panel-heading conteudo-admin">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>Raz&atilde;o Social</td>
                        <td>Fantasia</td>
                        <td>Telefone</td>
                        <td>Neg&oacute;cio</td>
                        <td>Data Envio</td>
                        <td>Lida</td>
                    </tr>
                </thead>
                <tbody>
                    {% for distribuidor in distribuidores %}
                        {% if distribuidor.lida %}
                            <tr data-toggle="modal" data-target="#myModal" 
                                href="{{ path('franbella_admin_distribuidor_proposta_detalhes', {'id_distribuidor': distribuidor.id} ) }}">
                        {% else %}
                            <tr style="font-weight: bold" data-toggle="modal" data-target="#myModal" 
                                href="{{ path('franbella_admin_distribuidor_proposta_detalhes', {'id_distribuidor': distribuidor.id} ) }}">
                        {% endif %}

                        <td>{{ distribuidor.razaoSocial }}</td>
                        <td>{{ distribuidor.fantasia }}</td>
                        <td>{{ distribuidor.telefoneFixo }}</td>
                        <td>{{ distribuidor.areaAtuacao }}</td>
                        <td>{{ distribuidor.dataEnvio|date('d/m/Y H:i:s') }}</td>
                        <td class="status-lida">
                            {% if distribuidor.lida %}
                                Sim
                            {% else %}
                                N&atilde;o
                            {% endif %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal" id="myModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
    
<script type="text/javascript">
    $(document).ready(function(){
        
        $('body').on('hidden.bs.modal', '.modal', function () {
            $(this).removeData('bs.modal');
        });
        
        $('#myModal').on('hide.bs.modal', function (e) {
            window.location = "{{ path('franbella_admin_proposta_distribuidor_home') }}";
        });
        
    });
</script>
{% endblock %}