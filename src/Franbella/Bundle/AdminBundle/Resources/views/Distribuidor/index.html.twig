{% extends "FranbellaAdminBundle:Page:index.html.twig" %}
{% block interno %}
{% block tituloAdministracao %}
    <h3 class="titulo-pagina-admin">Distribuidores</h3>
{% endblock %}
    <div class="panel panel-default painel-conteudo-admin">
        <div class="panel-heading conteudo-admin">
            <div class="caixa-form">
                {% block conteudoAdministracao %}
                    <form name="cadastra-distribuidor" id="cadastra-distribuidor" 
                          action="{{ path('franbella_admin_distribuidor_cadastra', {'id_distribuidor': distribuidor.id}) }}" method="POST" {{ form_enctype(form) }}>
                        {{ form_widget(form) }}
                        <input type="submit" value="Cadastrar" />
                    </form>
                {% endblock %}
                
                {% if distribuidor.id > 0 %}
                <br />
                <p><a href="{{ path('franbella_admin_distribuidor_home') }}">Criar Novo Registro</a></p>
                <p>Logo atual:</p>
                <img class="imagem-logo" src="{{ ('uploads/distribuidor/logo/' ~ distribuidor.logo) | imagine_filter('my_thumb') }}">
                {% endif %}
                
                {% for flashMessage in app.session.flashbag.get('resposta-distribuidor') %}
                    <div class="resposta-contato">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                
            </div>
            <div class="caixa-registros">
                <h4><strong>Distribuidores Cadastrados</strong></h4>
                {% for distribuidor in distribuidores %}
                <p>{{ distribuidor.razaoSocial }} - {{ distribuidor.cidade }} 
                    <span style="padding-left: 10px">
                        <a href="{{ path('franbella_admin_distribuidor_home', {'id_distribuidor': distribuidor.id}) }}">Editar</a> | 
                        <a href="{{ path('franbella_admin_distribuidor_exclui', {'id_distribuidor': distribuidor.id}) }}">Excluir</a></span></p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(document).ready(function(){
        $('.resposta-contato').fadeOut(5000);
        
        console.log($('#franbella_bundle_adminbundle_distribuidor_telefone'));
        
        $('#franbella_bundle_adminbundle_distribuidor_telefone').mask('(00) 0000-00009',{clearIfNotMatch: true});
        
    });
</script>
{% endblock %}