<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Franbella{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/estilos.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
        <link rel="stylesheet" 
              href="http://cdn.datatables.net/plug-ins/725b2a2115b/integration/bootstrap/3/dataTables.bootstrap.css" />
        {% endblock %}
        {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.mask.min.js') }}"></script>
{#        <script type="text/javascript" src="{{ asset('js/require.js') }}"></script>#}
        <script type="text/javascript" src="{{ asset('js/jquery.nicescroll.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dataTables.bootstrap.js') }}"></script>
        
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
          <![endif]-->
        <script type="text/javascript">
            {#require.config({
                    baseUrl: '{{ asset('js') }}',
                    paths: {
                        jquery: 'jquery',
                        dataTables: 'jquery.dataTables',
                        dataTablesBS: 'dataTables.bootstrap.js'
                    }
                });#}
            $(document).ready(function(){
                $('.caixa-eventos, .caixa-descricao, .caixa-descricao-espaco, .caixa-imagem, .caixa-registros, .caixa-resultados-pdv').niceScroll({
                    cursorcolor: '#962169'
                });
                
                oTable = $('.table').dataTable({
                    "info": false,
                    stateSave: false,
                    "pagingType": "simple_numbers",
                    "dom": '<"top"i>rt<"bottom"fp><"clear">',
                    "language":{
                        "paginate": {
                          "previous": "Anterior",
                          "next": "Próxima"
                        },
                        "search": "Busca: "
                    }
                    
                });
                
                var oSettings = oTable.fnSettings();
                oSettings._iDisplayLength = 5;
                oTable.fnDraw();
                
                {#$('.caixa-descricao').niceScroll();
                $('.caixa-descricao-espaco').niceScroll();
                $('.caixa-imagem').niceScroll();#}
            });    
           
        </script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('franbella_admin_homepage') }}">Franbella - Administra&ccedil;&atilde;o</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {#<li>
                            <a href="{{ path('franbella_admin_video_home') }}">V&iacute;deos</a>
                        </li>#}
                        <li><a href="{{ path('franbella_admin_agenda_home') }}">Agenda</a></li>
                        <li><a href="{{ path('franbella_admin_distribuidor_home') }}">Distribuidores</a></li>
                        <li><a href="{{ path('franbella_admin_contato_home') }}">Contato 
                                {% if mensagens|length > 0 %}
                                <span class="badge">{{ mensagens|length }}</span>
                                {% endif %}
                                </a></li>
                        <li>
                            <a href="{{ path('franbella_admin_proposta_distribuidor_home') }}">
                                Propostas Distribuidores 
                                {% if distNaoLida|length > 0 %}
                                <span class="badge">{{ distNaoLida|length }}</span>
                                {% endif %}
                            </a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                PDV <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="{{ path('franbella_admin_pdv_home') }}">
                                        Cadastra PDV
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('franbella_admin_pdv_tipo_home') }}">
                                        Cadastra Tipo PDV
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid container-admin">
            {% block interno %}
            {% block tituloAdministracao %}
                <h3 class="titulo-pagina-admin">Administra&ccedil;&atilde;o do Site</h3>
            {% endblock %}
                <div class="panel panel-default painel-conteudo-admin">
                    <div class="panel-heading conteudo-admin">
                        {% block conteudoAdministracao %}
                            <p>Escolha uma opção no menu acima</p>
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
        {% endblock %}
    </body>
</html>
