<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Franbella{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/estilos.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
        {% endblock %}
        {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/require.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.nicescroll.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        <script type="text/javascript">
            require.config({
                    baseUrl: '{{ asset('js') }}',
                    paths: {
                        jquery: 'jquery'
                    }
                });
            $(document).ready(function(){
                $('.caixa-eventos, .caixa-descricao, .caixa-descricao-espaco, .caixa-imagem').niceScroll({
                    cursorcolor: '#962169'
                });
                {#$('.caixa-descricao').niceScroll();
                $('.caixa-descricao-espaco').niceScroll();
                $('.caixa-imagem').niceScroll();#}
            });    
           
        </script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Franbella - Administra&ccedil;&atilde;o</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ path('franbella_admin_video_home') }}">V&iacute;deos</a>
                        </li>
                        <li><a href="#">Agenda</a></li>
                        <li><a href="{{ path('franbella_admin_distribuidor_home') }}">Distribuidores</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid container-admin">
            {% block interno %}
            {% block tituloAdministracao %}
                <h3 class="titulo-pagina-admin">Administra&ccedil;&atilde;o do Site</h3>
            {% endblock %}
                <div class="panel panel-default painel-conteudo-admin">
                    <div class="panel-heading conteudo-admin">
                        {% block conteudoAdministracao %}
                            <p>Escolha uma opção no menu acima</p>
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
        {% endblock %}
    </body>
</html>
