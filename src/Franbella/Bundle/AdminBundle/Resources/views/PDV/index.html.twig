{% extends "FranbellaAdminBundle:Page:index.html.twig" %}
{% block interno %}
{% block tituloAdministracao %}
    <h3 class="titulo-pagina-admin">PDVs</h3>
{% endblock %}
    <div class="panel panel-default painel-conteudo-admin">
        <div class="panel-heading conteudo-admin">
            <div class="caixa-form">
                {% block conteudoAdministracao %}
                    <form name="cadastra-distribuidor" id="cadastra-distribuidor" 
                          action="{{ path('franbella_admin_pdv_cadastra', {'id_pdv': pdv.id}) }}" method="POST" {{ form_enctype(form) }}>
                        {{ form_widget(form) }}
                        <input type="submit" value="Cadastrar" />
                    </form>
                {% endblock %}
                
                {% if pdv.id > 0 %}
                <br />
                <p><a href="{{ path('franbella_admin_pdv_home') }}">Criar Novo Registro</a></p>
                {% endif %}
                
                {% for flashMessage in app.session.flashbag.get('resposta-pdv') %}
                    <div class="resposta-contato">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                
            </div>
            <div class="caixa-registros">
                <h4><strong>PDVs Cadastrados</strong></h4>
                {% for umPdv in pdvs %}
                <p><strong>{{ umPdv.razaoSocial }}</strong> <span style="font-size: 12px">({{ umPdv.fantasia }})</span> 
                    <span style="padding-left: 10px">
                        <a href="{{ path('franbella_admin_pdv_home', {'id_pdv': umPdv.id}) }}">Editar</a> | 
                        <a href="{{ path('franbella_admin_pdv_home', {'id_pdv': umPdv.id}) }}">Excluir</a>
                    </span>
                </p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/require.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $('.resposta-contato').fadeOut(5000);
        
    });
    
    require.config({
                    baseUrl: '{{ asset('js') }}',
                    paths: {
                        jquery: 'jquery'
                    }
                });
</script>
{% endblock %}