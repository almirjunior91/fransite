{% extends "::base.html.twig" %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/jPages.css') }}" />
{% endblock %}
{% block javascripts %}
{{ parent() }}
        <script type="text/javascript" src="{{ asset('js/require.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jPages.min.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $("div.holder").jPages({
            containerID : "lista-pdvs",
            previous: "← Anterior",
            next: "Próxima →",
            perPage: 5
        });
    });

</script>
{% endblock %}
{% block body %}
<p class="subtitulo-produto">Resultados:</p>
<ul id="lista-pdvs">
    {% for pdv in pdvs %}
    {% if pdv.complemento == ' ' %}
    <li class="list-item-pdv"><strong>{{ pdv.fantasia }}</strong> - {{ pdv.rua }}, {{ pdv.numero }} - {{ pdv.bairro }} 
        {% if pdv.telefone == ' ' %}
        {% else %}
        - <strong>Tel.: </strong>{{ pdv.telefone }}</li>
        {% endif %}

    {% else %}
        <li class="list-item-pdv"><strong>{{ pdv.fantasia }}</strong> - {{ pdv.rua }}, {{ pdv.numero }}, {{ pdv.complemento }} 
            - {{ pdv.bairro }}
            {% if pdv.telefone == ' ' %}
            {% else %}
            - <strong>Tel.: </strong>{{ pdv.telefone }}</li>
            {% endif %}
    {% endif %}
    {% else %}
        <p>Nada encontrado.</p>
    {% endfor %}
</ul>
<div class="holder"></div>
{% endblock %}