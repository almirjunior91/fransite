{# empty Twig template #}
{% extends "::base.html.twig" %}
{% block conteudo %}
<div class="caixa-eventos">
    <h3 class="titulo-pagina">Seja um Distribuidor</h3>
    <p class="subtitulo-produto">Ol&aacute;! Precisamos saber 
        algumas informa&ccedil;&otilde;es</p>
    <br />
    {% for flashMessage in app.session.flashbag.get('retorno-contato') %}
        <div class="resposta-contato-distribuidor">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <form name="form-envia-distribuidor" 
          id="form-envia-distribuidor" 
          action="{{ path('franbella_site_cadastra_contato_distribuidor') }}" method="POST">
        {{ form_widget(form) }}
        <br />
        
        <input type="submit" value="Enviar" />
    </form>
    <br />
    <h3 class="subtitulo-produto">Nossos Parceiros Atuais:</h3>
    <div class="logo-result"></div>
    <div class="logo-result"></div>
    <div class="logo-result"></div>
    <div class="logo-result"></div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(document).ready(function(){
        $('.resposta-contato-distribuidor').fadeOut(5000);
    });
</script>
{% endblock %}